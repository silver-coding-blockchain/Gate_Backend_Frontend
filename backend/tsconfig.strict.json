{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "outDir": "./dist",
    "paths": {
      "@app/interfaces": ["src/interfaces"],
      "@app/interfaces/*": ["src/interfaces/*"],
      "@app/errors": ["src/errors"],
      "@app/errors/*": ["src/errors/*"],
      "@app/events": ["src/events"],
      "@app/events/*": ["src/events/*"],
      "@app/modules": ["src/modules"],
      "@app/modules/*": ["src/modules/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  }
}
